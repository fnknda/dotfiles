;label-connected-foreground = ${colors.high}

;format-connected-underline = #0a6cf5
;label-connected = Ôá´ %essid%
;label-connected = Ôá´  ÔÅ£ %downspeed% | ÔÅ¢    %upspeed% 
label-connected = "W %signal% [ D %downspeed% U %upspeed% ]"

format-disconnected = W OFF
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

;ramp-signal-0 = 1;
;ramp-signal-1 = 2;
;ramp-signal-2 = 3;
;ramp-signal-3 = 4;
;ramp-signal-4 = 5;
;ramp-signal-foreground = ${colors.foreground-alt}

